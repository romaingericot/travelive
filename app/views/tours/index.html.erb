<div id="map"
  style="width: 100%; height: 750px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>


<%= simple_form_for :search, url: root_path, method: "GET" do |f| %>
  <div class="map-search" >
    <%= f.input :city, label: "Ville", placeholder: "Votre prochaine ville", collection: @cities, input_html: { class: 'special' } %>
    <%= f.input :country, label: "Pays", placeholder: "Votre prochaine ville", collection: @countries, input_html: { class: 'special' } %>

    <%= f.submit "Search", class: "btn" %>
  </div>
<% end %>
