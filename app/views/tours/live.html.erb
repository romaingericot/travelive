<div class="min-vh-100">
  <div class="banner min-vh-100 jarallax" data-jarallax data-speed=".8" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @tour.images[0].key %>);">

  <h2><%= @tour.name %></h2>
  <p><%= @tour.city %></p>
  <p><%= @tour.country %></p>

  <% if @tour.user.photo.attached? %>
    <%= cl_image_tag "#{@tour.user.photo.key}", crop: :fill %>
  <% else %>
    <%= image_tag @tour.user.gender == "Homme" ? "avatar_homme.jpg" : "avatar_femme.jpg", crop: :fill %>
  <% end %>

</div>
  <div class="tab-container">
    <ul class="list-inline tabs">
      <li>
        <p class="tab align-top">Date</p>
        <p class="infos"><%= @tour.date.strftime("%d %B") %></p>
      </li>
      <li>
        <p class="tab">Heure</p>
        <p class="infos"><%= @tour.time.strftime("%I:%M %p") %></p>
      </li>
      <li>
        <p class="tab">Dur√©e</p>
        <p class="infos"><%= @tour.duration %>min</p>
      </li>
      <li>
        <p class="tab">Langue</p>
        <p class="infos"><%= @tour.language %></p>
      </li>
    </ul>
  </div>
</div>


  </div>
</div>

