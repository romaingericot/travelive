<div class="container mt-5">
  <% if current_user.bookings.empty? %>
    <div class="tab-container">
      <h2>Tu n'as pas encore booké de visite !</h2>
    </div>

  <% elsif current_user.bookings.count == 1 %>
    <div class="tab-container">
      <h2>Hello <%= current_user.first_name%>, voici ton prochain voyage !</h2>
    </div>
      <% @bookings.each do |booking| %>
        <div class="card-product">
          <%= link_to tour_path(booking.tour) do %>
            <%= cl_image_tag booking.tour.images[0].key %>
          <% end %>
          <div class="card-product-infos-link">
            <div class="card-product-infos">
              <h2><%= booking.tour.name %></h2>
              <p><%= booking.tour.date %></p>
              <p>Durée - <%= booking.tour.duration %> minutes</p>
              <p>Langue - <%= booking.tour.language.capitalize %></p>
            </div>
            <div class="card-link">
              <%= link_to "Rejoindre par ordinateur", tour_live_path(booking.tour), class: "btn btn-flat m-1" %>
              <%= link_to "Rejoindre par téléphone", "https://travelive.daily.co/A10gZsu1NrLQxfd2wfgf", target: "_blank", class: "btn btn-flat m-1" %>
              <%= link_to "Annuler la réservation", booking_path(booking) , method: :delete, class: "btn btn-flat m-1" %>
            </div>
          </div>
        </div>
      <% end %>

  <% else %>
    <div class="tab-container">
      <h2>Hello <%= current_user.first_name%>, voici tes prochains voyages !</h2>
    </div>
      <% @bookings.each do |booking| %>
        <div class="card-product">
          <%= link_to tour_path(booking.tour) do %>
            <%= cl_image_tag booking.tour.images[0].key %>
          <% end %>
          <div class="card-product-infos-link">
            <div class="card-product-infos">
              <h2><%= booking.tour.name %></h2>
              <p><i class="far fa-calendar-alt"></i> <%= l(booking.tour.date, format: :long) %></p>
              <p><i class="far fa-clock"></i> <%= booking.tour.time.strftime("%H:%M") %> </p>
              <p><i class="fas fa-hourglass-half"></i> <%= booking.tour.duration %> minutes</p>
              <p><i class="fas fa-language"></i> <%= booking.tour.language.capitalize %></p>
              <p><i class="fas fa-users"></i> <%= booking.tour.capacity%></p>
            </div>
            <div class="card-link">
              <%= link_to "Rejoindre par ordinateur", tour_live_path(booking.tour), class: "btn btn-flat m-1" %>
              <%= link_to "Rejoindre par téléphone", "https://travelive.daily.co/A10gZsu1NrLQxfd2wfgf", target: "_blank", class: "btn btn-flat m-1" %>
              <%= link_to "Annuler la réservation", booking_path(booking) , method: :delete, class: "btn btn-flat m-1" %>
            </div>
          </div>
        </div>
      <% end %>
  <% end %>

  <!-- Calendrier guide
  ================================================== -->

  <div class="tab-container">
    <div class="calendrier">
      <h5>Les populaires</h5>
      <h3>L'aventure continue avec nos guides les plus <strong>populaires</strong>.</h3>
      <p>Consulter les prochains lives de nos <strong>guides</strong>.</p>
    </div>
  </div>

